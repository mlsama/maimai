<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      				  http://www.springframework.org/schema/beans/spring-beans.xsd
      				  http://code.alibabatech.com/schema/dubbo 
	    			  http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- ######### 分布式服务框架dubbo(暴露服务  服务端) ######### -->
    <!-- 配置服务应用的名称 -->
    <dubbo:application name="maimai-cart-service"/>

    <!-- 使用zookeeper注册中心暴露服务地址  -->
    <dubbo:registry protocol="zookeeper" address="192.168.31.22:2181"/>

    <!-- 用dubbo协议在20883端口暴露服务
    	 name: 协议名
    	 port: 端口号
     -->
    <dubbo:protocol name="dubbo" port="20883"/>
    <!-- 配置需要暴露的服务 -->
    <dubbo:service interface="com.maimai.cart.service.CartService"
                   ref="cartServiceImpl" />

</beans>